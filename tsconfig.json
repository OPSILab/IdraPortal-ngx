{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["google.maps"],
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true, 
    "esModuleInterop": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2022",
      "dom"
    ],
    "plugins": [
      { "name": "tslint-language-service"}
    ]
    
  },
  "angularCompilerOptions": {
    "enableIvy": false
  }
}
